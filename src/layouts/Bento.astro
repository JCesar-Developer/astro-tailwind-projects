---
import BackArrow from '../components/Back-arrow.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Bento quotes app developed with Astro + Tailwind CSS" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/bento/favicon-32x32.png" />
		<meta name="generator" content={Astro.generator} />

    <link rel="preload" href="/bento/fonts/BarlowSemiCondensed-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/bento/fonts/BarlowSemiCondensed-Medium.woff2" as="font" type="font/woff2" crossorigin="anonymous" />
    <link rel="preload" href="/bento/fonts/BarlowSemiCondensed-SemiBold.woff2" as="font" type="font/woff2" crossorigin="anonymous" />

		<title>{title}</title>
	</head>

	<body id="bento" class="relative bg-gray-200">

    <!-- Back-arrow -->
    <div class="fixed z-20 top-5 left-5">
      <a href="/">
        <BackArrow />
      </a>
    </div>

    <!-- Main -->
		<slot />

	</body>
</html>

<style is:global>
.b1 { border: solid 1px red; }
.b2 { border: solid 1px blue; }
.b3 { border: solid 1px green; }
.b4 { border: solid 1px yellow; }
.b5 { border: solid 1px orange; }
.b5 { border: solid 1px purple; }

@font-face {
  font-family: 'Barlow Semi Condensed';
  src: url("/bento/fonts/BarlowSemiCondensed-Regular.woff2") format("woff2");
  font-weight: 400;
}
@font-face {
  font-family: 'Barlow Semi Condensed';
  src: url("/bento/fonts/BarlowSemiCondensed-Medium.woff2") format("woff2");
  font-weight: 500;
}
@font-face {
  font-family: 'Barlow Semi Condensed';
  src: url("/bento/fonts/BarlowSemiCondensed-SemiBold.woff2") format("woff2");
  font-weight: 600;
}

#bento * {
  font-family: 'Barlow Semi Condensed', sans-serif;
}
</style>
