---
import Header from '../components/shortly/Header.astro';
import Footer from '../components/shortly/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Shortly app developed with Astro + Tailwind CSS" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/shortly/favicon-32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

    <link rel="preload" href="/shortly/fonts/Poppins-Bold.woff2" as="font" type="font/woff2" crossorigin />
    <link rel="preload" href="/shortly/fonts/Poppins-Regular.woff2" as="font" type="font/woff2" crossorigin />
	</head>
	<body id="shortly">
    <Header />
    <main>
      <slot />
    </main>
    <Footer />
	</body>
</html>

<style is:global>
:root {
  --cyan: hsl(180, 66%, 49%);
  --cyanLight: hsl(180, 66%, 69%);
  --darkViolet: hsl(257, 27%, 26%);
  --red: hsl(0, 87%, 67%);
  --grayishViolet: hsl(257, 7%, 63%);
  --veryDarkBlue: hsl(255, 11%, 22%);
  --veryDarkViolet: hsl(260, 8%, 14%) ;
}

.b1 { border: solid 1px red; }
.b2 { border: solid 1px blue; }
.b3 { border: solid 1px green; }
.b4 { border: solid 1px yellow; }
.b5 { border: solid 1px orange; }
.b5 { border: solid 1px purple; }

@font-face {
  font-family: 'Poppins';
  src: url("/shortly/fonts/Poppins-Regular.woff2") format("woff2");
  font-weight: 400;
}
@font-face {
  font-family: 'Poppins';
  src: url("/shortly/fonts/Poppins-Medium.woff2") format("woff2");
  font-weight: 500;
  font-display: swap;
}
@font-face {
  font-family: 'Poppins';
  src: url("/shortly/fonts/Poppins-Bold.woff2") format("woff2");
  font-weight: 700;
}

#shortly > * {
  font-family: 'Poppins', sans-serif;
}

#shortly .container-md {
  @apply px-6 md:px-0 md:container md:mx-auto xl:max-w-6xl;
}
</style>
