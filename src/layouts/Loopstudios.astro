---
import Hero from '../components/loopstudios/Hero.astro';
import Footer from '../components/loopstudios/Footer.astro';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Loopstudios landpages developed with Astro + Tailwind CSS" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/loopstudios/favicon-32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

    <link rel="preload" href="/loopstudios/fonts/alata/Alata-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" href="/loopstudios/fonts/josefin-sans/JosefinSans-Light.woff2" as="font" type="font/woff2" crossorigin="anonymous">
	</head>

	<body id="loopstudios">
    <Hero />
    
    <main class="container-md">
      <slot />
    </main>

    <Footer />
	</body>

</html>

<style is:global>
.b1 { border: solid 1px red; }
.b2 { border: solid 1px blue; }
.b3 { border: solid 1px green; }
.b4 { border: solid 1px yellow; }
.b5 { border: solid 1px orange; }
.b5 { border: solid 1px purple; }

@font-face {
  font-family: 'Alata';
  src: url("/loopstudios/fonts/alata/Alata-Regular.woff2") format("woff2");
  font-weight: 400;
}
@font-face {
  font-family: 'Josefin Sans';
  src: url("/loopstudios/fonts/josefin-sans/JosefinSans-Light.woff2") format("woff2");
  font-weight: 300;
}
@font-face {
  font-family: 'Josefin Sans';
  src: url("/loopstudios/fonts/josefin-sans/JosefinSans-Regular.woff2") format("woff2");
  font-weight: 400;
  font-display: swap;
}
@font-face {
  font-family: 'Josefin Sans';
  src: url("/loopstudios/fonts/josefin-sans/JosefinSans-Bold.woff2") format("woff2");
  font-weight: 700;
  font-display: swap;
}

#loopstudios {
  font-family: 'Josefin Sans', sans-serif;
}

#loopstudios .alata {
  font-family: 'Alata', sans-serif;
}

#loopstudios .container-md {
  @apply px-6 md:px-0 md:container md:mx-auto xl:max-w-6xl;
}

#loopstudios h2 {
  @apply uppercase text-4xl md:text-5xl font-light;
}
</style>
