---
import { type Feature } from '../../data/bookmark.data';
import Button from '../../components/bookmark/Button.astro';

interface Props {
  features: Feature[];
}

const { features } = Astro.props;
---

<!-- feature-selector -->
<nav class="max-w-xl mx-auto md:border-b">
  <div class="flex flex-row justify-between">
    {
      features.map((feature) => (
        <button class="feature-selector-item" onclick="myFunction( feature.name )">
          <p>{ feature.name }</p>
        </button>
      ))
    }
  </div>
</nav>

<!-- Features -->
{
  features.map((feature) => (
    <article id={ feature.name } class="mt-12">
      <div class="container flex flex-col mx-auto max-w-6xl gap-5
      md:flex-row md:gap-10 lg:gap-28">

        <!-- feature-image -->
        <div class="md:w-1/2">
          <img src={ feature.content.image } alt={ feature.name }>
        </div>
        
        <!-- feature-description -->
        <div class="md:w-1/2 space-y-8">
          <h1 class="text-3xl font-semibold">
            { feature.content.title }
          </h1>
          <p class="text-[--grayishBlue] md:max-w-md">
            { feature.content.description }
          </p>
          <Button fontWeight="bold">
            <p>More Info</p>
          </Button>
        </div>

      </div>
    </article>
  ))
}
  

<style>
.feature-selector-item {
  @apply w-40 py-5 capitalize text-center text-gray-800 hover:text-[--softRed];
}
.feature-selector-item.active {
  border: solid 1px red;
}
</style>