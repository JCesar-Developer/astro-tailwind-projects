---
const shortly_url = import.meta.env.SHORTLY;
---

<footer class="bg-[--veryDarkViolet] text-white">
  <div class="
    container-md py-16 flex flex-col justify-between items-center text-center space-y-16
    md:items-start md:flex-row md:text-left md:space-y-0"
  >
    <!-- Logo -->
    <section>
      <a href="/">
        <div class="w-[121px] h-[33px]">
          <img alt="logo" src={ `${ shortly_url }/logo.svg` }>
        </div>
      </a>
    </section>

    <!-- Links -->
    <section class="flex flex-col w-1/2 justify-between md:flex-row space-y-16
    md:space-y-0 [&>ul]:space-y-4 md:[&>ul]:max-w-[100px]
    [&>ul>li>a]:text-[--grayishViolet] hover:[&>ul>li>a]:text-[--cyan] [&>ul>li>a]:duration-100">
      <ul>
        <li class="font-bold">Features</li>
        <li><a href="#">Link Shortening</a></li>
        <li><a href="#">Branded Links</a></li>
        <li><a href="#">Analytics</a></li>
      </ul>
      <ul>
        <li class="font-bold">Resources</li>
        <li><a href="#">Blog</a></li>
        <li><a href="#">Developer</a></li>
        <li><a href="#">Support</a></li>
      </ul>
      <ul>
        <li class="font-bold">Company</li>
        <li><a href="#">About</a></li>
        <li><a href="#">Our teams</a></li>
        <li><a href="#">Career</a></li>
        <li><a href="#">Contact</a></li>
      </ul>
    </section>

    <!-- Social media -->
    <section>
      <ul class="flex flex-row gap-5 md:gap-4">
        <li class="icon">
          <img src={ `${ shortly_url }/icon-facebook.svg` } alt="Facebook Icon">
        </li>
        <li class="icon">
          <img src={ `${ shortly_url }/icon-twitter.svg` } alt="Twitter Icon">
        </li>
        <li class="icon">
          <img src={ `${ shortly_url }/icon-pinterest.svg` } alt="Pinteres Icon">
        </li>
        <li class="icon">
          <img src={ `${ shortly_url }/icon-instagram.svg` } alt="Instagram Icon">
        </li>
      </ul>
    </section>
  </div>
</footer>

<style>
.icon {
  @apply cursor-pointer flex items-center justify-center transition-all duration-200 hover:scale-105;
}

.icon:hover {
  filter: brightness(0) saturate(100%) invert(72%) sepia(99%) saturate(362%) hue-rotate(122deg) brightness(84%) contrast(93%);
}
</style>