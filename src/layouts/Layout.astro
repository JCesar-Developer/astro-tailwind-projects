---
interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en" class="scroll-smooth">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Template to develop landpages with Astro + Tailwind CSS" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>

    <!-- Fonts -->
    <link rel="preconnect" href="/home/fonts/Montserrat-Regular.woff2" as="font" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" href="/home/fonts/Montserrat-Bold.woff2" as="font" type="font/woff2" crossorigin="anonymous">
    <link rel="preload" href="/home/fonts/Montserrat-Black.woff2" as="font" type="font/woff2" crossorigin="anonymous">

	</head>

	<body id="home">
    <slot />
	</body>

</html>

<style is:global>
.b1 { border: solid 1px red; }
.b2 { border: solid 1px blue; }
.b3 { border: solid 1px green; }
.b4 { border: solid 1px yellow; }
.b5 { border: solid 1px orange; }
.b5 { border: solid 1px purple; }

@font-face {
  font-family: 'Montserrat';
  src: url("/home/fonts/Montserrat-Regular.woff2") format("woff2");
  font-weight: 400;
}
@font-face {
  font-family: 'Montserrat';
  src: url("/home/fonts/Montserrat-Bold.woff2") format("woff2");
  font-weight: 700;
}
@font-face {
  font-family: 'Montserrat';
  src: url("/home/fonts/Montserrat-Black.woff2") format("woff2");
  font-weight: 900;
}

#home .container-md {
  @apply px-6;
}
</style>
